@model Library.Models.VmAuthor
@{

    ViewData["Title"] = "Author Section";
    Layout = "~/Views/Shared/_Layoutpage.cshtml";}


@section Body{
  
        <form method="post" enctype="multipart/form-data">
            <div class="row" style="margin-left: 10px; margin-top: 10px">
                <h1>New Authour</h1>
                <div class="col-xs-1 col-lg-1">
                    <span>First Name</span>
                </div>
                <div class="col-xs-2 ">
                    <input type="text" class="form-control" asp-for="author.FirstName" />
                </div>

                <div class="col-xs-1 col-lg-1">
                    <span>Last Name</span>
                </div>
                <div class="col-xs-2 ">
                    <input type="text" class="form-control" asp-for="author.LastName" />
                </div>

                <div class="row" style="margin-left:10px;margin-top: 10px">
                    <div class="col-xs-1 col-lg-1">
                        <span>Nationality</span>
                    </div>
                    <div class="col-xs-3 col-lg-3">
                        <select class="form-control" asp-items='new SelectList(Model.nat,"ID","Name")' asp-for="author.NationalityID">
                        </select>
                    </div>

                </div>
            </div>
            <div class="col-xs-4 col-lg-4" style="padding-block:20px">
                <div class="col-xs-1 col-lg-1" style="padding-right:30px">
                    <span>Image</span>
                </div>
                <div class="col-xs-4 col-lg-4">
                    <input type="file" asp-for="author.Image" />
                    <span asp-validation-for="author.Image"></span>

                </div>
            </div>

            <div class="col-lg-offset-10 col-xs-1 col-lg-1">
                <input type="submit" value="Save" class="btn btn-danger rounded-0 btn-block" asp-action="NewListA" />
            </div>


        </form>


}
