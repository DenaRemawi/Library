
@model Library.Data.Category


@{

    ViewData["Title"] = "Author Section";
    Layout = "~/Views/Shared/_Layoutpage.cshtml";}
@section Head {
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
}

@section Body{
    <form method="post" enctype="multipart/form-data">
        <div class="row" style="margin-left: 10px; margin-top: 10px">
            <h1>New Authour</h1>
            <div class="col-xs-1 col-lg-1">
                <span>Category Code</span>
            </div>
            <div class="col-xs-2 ">
                <input type="text" class="form-control" asp-for="CategoryCode" />
            </div>

            <div class="col-xs-1 col-lg-1">
                <span>Category Name</span>
            </div>
            <div class="col-xs-2 ">
                <input type="text" class="form-control" asp-for="CategoryName" />
            </div>
        </div>
        <a class="btn btn-danger rounded-0 btn-block" asp-action="Save" data-target="#catpop" data-toggle="modal" id="insertRow">Save</a>

    </form>
}